{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "standard",

    "rules": {
        "space-before-function-paren": 0,
        "semi": [2, "always"],
        "curly": ["off", "multi-or-nest"],
        "no-implicit-globals": 0,
        "keyword-spacing": ["error", { "overrides": {
            "catch": { "after": false }}}],
        "standard/no-callback-literal": 0,
        "eqeqeq": "off",
        "space-infix-ops": 0,
        "handle-callback-err": 0,
        "no-mixed-operators": 0,
        "camelcase": 0
    }
}